{
    "name": "bluepill.daemon",
    "version": "1.0.0",
    "description": "BluePill driver and host",
    "main": "./bin/startup.js",
    "author": "tB",
    "license": "beerware",
    "scripts": {
        "xpreinstall": "sudo npm i -g typescript jest tslint npm-run-all",
        "start": "node ./bin/startup.js",
        "run": "npm run clean && npm run build && clear && npm run start",
        "autotranspilation": "tsc --watch",
        "autorun": "nodemon ./bin/startup.js --port 3000 --serial /dev/ttyUSB0 --log",
        "serve": "npm run clean && run-p autotranspilation autorun",
        "lint": "tslint -c tslint.json './src/**/*.{ts,tsx}' --format msbuild",
        "test": "jest --runInBand",
        "build": "tsc -p .",
        "clean": "rm ./bin -rf",
        "autofix": "tslint --fix --project .",
        "push": "git push origin master"
    },
    "devDependencies": {
        "@types/dotenv": "^4.0.0",
        "@types/express": "^4.16.0",
        "@types/jasmine": "^2.6.3",
        "@types/jest": "^21.1.6",
        "@types/lodash": "^4.14.92",
        "@types/node": "^7.0.18",
        "@types/serialport": "^6.0.4",
        "@types/socket.io": "^1.4.39",
        "jest": "^21.2.1",
        "moq.ts": "^2.7.3",
        "nodemon": "^1.12.1",
        "npm-check-updates": "^2.14.0",
        "npm-run-all": "^4.1.2",
        "ts-jest": "^21.2.1",
        "typescript": "^2.6.2"
    },
    "dependencies": {
        "asyncawait": "^1.0.6",
        "dotenv": "^4.0.0",
        "express": "^4.16.3",
        "inversify": "^4.1.0",
        "jasmine-core": "^2.6.1",
        "minimist": "^1.2.0",
        "os": "^0.1.1",
        "reflect-metadata": "^0.1.10",
        "serialport": "^7.0.2",
        "socket.io": "^2.1.1"
    }
}
